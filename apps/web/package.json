{
	"name": "@safestreets/web",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm with-env vite dev",
		"build": "pnpm with-env vite build",
		"preview": "pnpm with-env vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"with-env": "dotenv -e ../../.env --"
	},
	"devDependencies": {
		"@eslint/js": "^9.22.0",
		"@safestreets/api": "workspace:*",
		"@safestreets/auth": "workspace:*",
		"@safestreets/eslint-config": "workspace:*",
		"@safestreets/prettier-config": "workspace:*",
		"@safestreets/tailwind-config": "workspace:*",
		"@safestreets/tsconfig": "workspace:*",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22.18.1",
		"better-auth": "catalog:",
		"dotenv-cli": "catalog:",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "catalog:",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^1.0.0"
	}
}
